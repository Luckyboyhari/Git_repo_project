sudo apt update && sudo apt install -y openjdk-17-jdk unzip wget && cd /opt && sudo wget https://binaries.sonarsource.com/Distribution/sonarqube/sonarqube-10.6.0.92116.zip && sudo unzip sonarqube-10.6.0.92116.zip && sudo mv sonarqube-10.6.0.92116 sonarqube && sudo adduser --system --no-create-home --group --disabled-login sonarqube && sudo chown -R sonarqube:sonarqube /opt/sonarqube && cd /opt/sonarqube/bin/linux-x86-64 && sudo -u sonarqube ./sonar.sh start
